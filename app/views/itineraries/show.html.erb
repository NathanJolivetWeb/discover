<div class='container-show-map'>
  <div class="one">

    <%= simple_form_for [@itinerary, @step] do |f|%>
    <div class='form-show'>
        <div>
          <%= f.input :address, label:false, placeholder:'étape'%>
        </div>
        <div>
          <%= f.submit 'Ajouter', class:'button-green p-1'%>
        </div>
    </div>
    <% end %>

    <h3>Etapes</h3>
    <% @itinerary.steps.each do |step| %>
      <div class='step'>
        <%= step.address.capitalize %>
        <%= link_to step_path(step, itinerary:@itinerary.id), method: :delete,data: { confirm: "Are you sure you want to remove your step ?"} do %>
          Delete
        <% end %>
      </div>
    <% end %>
    <div class='infos-itinerary'>
      <h3>Informations de l'itinéraire</h3>
      <div id='distance'>Distance: </div>
      <div id='duration'>Durée: </div>
    </div>
  </div>
  <div id="map"
       style="width: 100%; height: 100%;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
