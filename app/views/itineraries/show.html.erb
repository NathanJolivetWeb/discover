<div class='container-show-map'>
  <div class="one">

    <%= simple_form_for [@itinerary, @step] do |f|%>
    <%= f.input :address %>
    <%= f.submit %>
    <% end %>
    <p>steps</p>
    <% @itinerary.steps.each do |step| %>
    <p><%= step.address.capitalize %></p>
    <%= link_to "delete", step_path(step), confirm: 'Are you sure?', method: :delete %>
    <% end %>

    <div id='distance'></div>
    <div id='duration'></div>
  </div>
  <div id="map"
       style="width: 100%; height: 100%;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
