<div class="container">
  <div class="d-flex">

    <%= link_to new_roadtrip_path do %>
     <p> <i class="fas fa-plus-circle"></i> Ajouter un trip </p>
    <% end %>
  </div>
  <div>
    <% @roadtrips.each do |roadtrip| %>
      <div class="card-product">
        <%= cl_image_tag roadtrip.photo.key, crop: :fill%>
        <div class="card-product-infos">
          <h2> <%= roadtrip.title %> </h2>
          <p><%= roadtrip.status %></p>
          <%= link_to "Consulter ce trip", roadtrip_path(roadtrip) %>
          <%= link_to "Supprimer ce trip", roadtrip_path(roadtrip), confirm: 'Are you sure?', method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>
